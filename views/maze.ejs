<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maze Game</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f3f3f3;
        }

        #maze {
            display: grid;
            grid-template-columns: repeat(10, 50px);
            grid-template-rows: repeat(10, 50px);
            gap: 2px;
        }

        .cell {
            width: 50px;
            height: 50px;
            background-color: #ccc;
            border: 1px solid #fff;
        }

        .player {
            background-color: #ff0000;
        }
    </style>
</head>
<body>
    <div id="maze">
        <% for (let i = 0; i < 100; i++) { %>
            <div class="cell"></div>
        <% } %>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const maze = document.getElementById('maze');
            const cells = document.querySelectorAll('.cell');
            let currentPlayerPosition = 0;

            // Initialize player position
            cells[currentPlayerPosition].classList.add('player');

            function movePlayer(event) {
                // Remove player class from current position
                cells[currentPlayerPosition].classList.remove('player');
                
                // Calculate new position based on arrow key
                switch (event.key) {
                    case 'ArrowUp':
                        if (currentPlayerPosition >= 10) currentPlayerPosition -= 10;
                        break;
                    case 'ArrowDown':
                        if (currentPlayerPosition < 90) currentPlayerPosition += 10;
                        break;
                    case 'ArrowLeft':
                        if (currentPlayerPosition % 10 !== 0) currentPlayerPosition -= 1;
                        break;
                    case 'ArrowRight':
                        if (currentPlayerPosition % 10 !== 9) currentPlayerPosition += 1;
                        break;
                }

                // Add player class to new position
                cells[currentPlayerPosition].classList.add('player');
            }

            window.addEventListener('keydown', movePlayer);
        });
    </script>
</body>
</html>
